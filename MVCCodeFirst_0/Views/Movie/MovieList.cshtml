@model MovieVM
@{
    ViewBag.Title = "MovieList";
}

<div class="jumbotron">
    Film eklemek icin @Html.ActionLink("tıklayınız", "AddMovie")
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Baslık</th>
            <th>Ozet</th>
            <th>Yonetmeni</th>
            <th colspan="2" style="padding-left:100px">Islemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Movie item in Model.Movies)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Summary</td>
                <td>@item.Director.FullName</td>
                <td>@Html.ActionLink("Guncelle", "UpdateMovie", new { id = item.ID }, new { @class = "btn btn-warning" })</td>
                <td>@Html.ActionLink("Sil", "DeleteMovie", new { id = item.ID }, new { @class = "btn btn-danger" })</td>

            </tr>
        }
    </tbody>
</table>


